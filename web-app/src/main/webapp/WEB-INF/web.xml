<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="4.0">
  <context-param>
    <param-name>PDF_SERVICE_URL</param-name>
    <param-value>${env.PDF_SERVICE_URL}</param-value>
  </context-param>
  <listener><listener-class>com.example.EMFListener</listener-class></listener>
  <servlet><servlet-name>Register</servlet-name><servlet-class>com.example.servlet.RegisterServlet</servlet-class></servlet>
  <servlet-mapping><servlet-name>Register</servlet-name><url-pattern>/register</url-pattern></servlet-mapping>
  <servlet><servlet-name>Login</servlet-name><servlet-class>com.example.servlet.LoginServlet</servlet-class></servlet>
  <servlet-mapping><servlet-name>Login</servlet-name><url-pattern>/login</url-pattern></servlet-mapping>
  <servlet><servlet-name>Logout</servlet-name><servlet-class>com.example.servlet.LogoutServlet</servlet-class></servlet>
  <servlet-mapping><servlet-name>Logout</servlet-name><url-pattern>/logout</url-pattern></servlet-mapping>
  <servlet><servlet-name>InvoiceList</servlet-name><servlet-class>com.example.servlet.InvoiceListServlet</servlet-class></servlet>
  <servlet-mapping><servlet-name>InvoiceList</servlet-name><url-pattern>/invoices</url-pattern></servlet-mapping>
  <servlet><servlet-name>InvoiceCreate</servlet-name><servlet-class>com.example.servlet.InvoiceCreateServlet</servlet-class></servlet>
  <servlet-mapping><servlet-name>InvoiceCreate</servlet-name><url-pattern>/invoice/create</url-pattern></servlet-mapping>
  <servlet><servlet-name>InvoicePdf</servlet-name><servlet-class>com.example.servlet.InvoicePdfServlet</servlet-class></servlet>
  <servlet-mapping><servlet-name>InvoicePdf</servlet-name><url-pattern>/invoice/pdf</url-pattern></servlet-mapping>
  <welcome-file-list><welcome-file>login</welcome-file></welcome-file-list>
</web-app>